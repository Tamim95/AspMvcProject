<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        html, body{
            font-size:20px !important ;
        }
        #dvLeftBar ul{
            padding: 5px 5px;
        }
        #dvLeftBar ul li{
            padding: 5px 5px ;
            border:1px solid thick ;
            list-style:none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @*<li>@Html.ActionLink("Dashboard","Dashboard","Home", new { area = "" },new {@class="nav-link"})</li>*@
                </ul>
            </div>
            <div style="position:absolute; right:5px; height:100%;width:150px">
                @{
                    if (Session["User"] != null)
                     {
                        <span> User: @Session["User"]</span>
                     }
                }

                @using (Html.BeginForm("Logout", "Account",FormMethod.Post))
            {
                <input type="submit" value="Logout" name="" id="btnLogout" />
            }
            </div>
        </div>
    </nav>

    <div id="dvLeftBar"  style="border:1px solid red; width:200px;position:fixed;background:#00ff21;left:0px;top:70px;bottom:0px;">
        
        <div style="padding:5px;background: #808080 ; color:white  ;">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Dashboard", "Dashboard", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
    <div id="dvContentWrapper" style="border:1px solid red;position:fixed; background:#ffffff; left:200px;top:70px;bottom:0px;right:0px; overflow:auto;">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>


    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
